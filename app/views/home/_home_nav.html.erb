<div class="header" id="myHeader">
  <div id="header">

    <div class="top">
      <div class="center">
        <div class="logo">
          <a href="<%= root_url %>"><%= image_tag("vea.png", size: "206x147", alt: "VEA") %></a></div>
        <nav>
          <ul>
            <li id="first_tab"><a href="<%= root_url %>university/new">University Registration</a></li>
            <li id="second_tab"><a href="<%= root_url %>student/new">Student Registration</a></li>
            <li id="third_tab"><a href="<%= root_url %>users/sign_in">Login</a></li>
          </ul>
        </nav>
      </div>
    </div>

    <div class="sub">
      <div class="center">
        <input id="sub_label", type="lable", style="color: green; background: #f5f5f5; border: none; padding-top: 4px;
          width: 100%"
               value="Search your preferred universities or courses within Australia using the search box">
      </div>
    </div>
  </div>
</div>

<script>
  $("ul li").on("click", function() {
    $("li").removeClass("active");
    $(this).addClass("active");
  });

  window.onscroll = function() {myFunction()};
  var header = document.getElementById("myHeader");
  var sticky = header.offsetTop;

  function myFunction() {
    if (window.pageYOffset > sticky) {
      header.classList.add("sticky");
    } else {
      header.classList.remove("sticky");
    }
  }

</script>

