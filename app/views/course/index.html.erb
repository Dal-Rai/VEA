<script>
  document.getElementById('uni_fourth').classList.add("active");
</script>

<div class="col-lg-2">
  <%= label_tag nil %>
</div>

<div class="col-lg-10">
  <div style="padding-top: 50px;">
    <span style="color: darkorange; font-size: 20px;"> Course Details </span>
    <span style="color: blue; font-size: 20px; padding-left: 80%">
      <a style="color: dodgerblue" href="<%= root_url %>course/new?faculty_id=<%= @faculty.id %>">Add Course</a>
    </span>
  </div>
  <table class="table", style="width: 100%;">
    <tr style="height: 50px; background-color: #ddd;">
      <th width="300", height="40">Name</th>
      <th width="200", height="40">Code</th>
      <th width="200">Duration</th>
      <th width="200">Rank</th>
      <th width="200">Unit Count</th>
      <th width="200">Action</th>
    </tr>
    <% @courses.each do |course| %>
      <tr>
        <td height="40">
          <%= course.name %>
        </td>

        <td height="40">
          <%= course.code %>
        </td>

        <td height="40">
          <%= course.duration %> semester
        </td>

        <td height="40">
          <%= course.rank %>
        </td>

        <td height="40">
          <%= link_to course.course_units.count, course_units_course_unit_index_path(course_id: course.id), method:
            :get, :style=> "color: blue;" %>
        </td>

        <td height="40">
          <a style="color: blue;" href="<%= root_url %>course/<%= course.id %>">Edit</a>
          ||
          <%= link_to "Delete", course_path(id: course.id), method: :delete, :style=> "color: red;", data: {
            confirm: 'Are you sure?'
          }%>
        </td>
      </tr>
    <%end%>

  </table>
  <div style="width: 50px;">
    <%= paginate @courses %>
  </div>
</div>