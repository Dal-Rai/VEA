<h1>Course Update</h1><br>

<%= form_for @course, url: {action: :update, method: :put} do |f| %>
  <%= hidden_field(:type, value='course') %>
  <%= label_tag(:name, "Course Code:", class: 'labelExtraLarge') %>
  <%= f.text_field :code, class: 'borderlessInputMedium' %><br><br>

  <%= label_tag(:name, "Course Name:", class: 'labelExtraLarge') %>
  <%= f.text_field :name, class: 'borderlessInputLarge' %><br><br>

  <%= label_tag(:duration, "Total Semester:", class: 'labelExtraLarge') %>
  <%= f.number_field :duration, class: 'borderlessInputMedium' %><br><br>

  <%= label_tag(:total_fees, "Total Fees:", class: 'labelExtraLarge') %>
  <%= f.text_field :total_fees, class: 'borderlessInputMedium' %><br><br>

  <%= label_tag(:course_category, "Category:", class: 'labelExtraLarge') %>
  <%= select_tag(:course_category_id, options_from_collection_for_select(@course_categories, "id", "name", @course
    .course_category_id), class:
    'borderlessInputLarge') %><br><br>

  <%= label_tag(:rank, "Rank:", class: 'labelExtraLarge') %>
  <%= f.text_field(:rank, options_for_select([["Certificate Or High School", "high_school"], ["Diploma", "diploma"],
    ["Under Graduate", "graduate"], ["Post Graduate", "post_graduate"], ["PHD", "phd"]], @course.rank), class: 'borderlessInputLarge')
  %><br><br>

  <%= label_tag(:submit, "", class: 'labelLarge') %>
  <%= f.submit 'Update', class: 'mediumSubmit' %>
<% end %>

