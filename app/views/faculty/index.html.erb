<script>
  document.getElementById('uni_fourth').classList.add("active");
</script>

<div class="col-lg-2">
  <%= label_tag nil %>
</div>

<div class="col-lg-10">
  <span style="color: darkorange; font-size: 20px;"> Faculty Details </span>
  <span style="color: blue; font-size: 20px; padding-left: 77%">
    <a href="<%= root_url %>university/<%= @university.id %>/faculty/new">Create Faculty</a>
  </span>

  <table id="facultyIndex", class="display", style="width: 100%;">
    <thead>
    <tr style="height: 50px; background-color: #ddd;">
      <th width="300", height="40">Name</th>
      <th width="200", height="40">Code</th>
      <th width="200">Course Count</th>
      <th width="200">Action</th>
    </tr>
    </thead>
    <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td height="40">
          <%= faculty.name %>
        </td>

        <td height="40">
          <%= faculty.code %>
        </td>

        <td height="40">
          <a href="<%= root_url %>course?faculty_id=<%= faculty.id %>">
          <%= faculty.courses.count %></a>
        </td>

        <td height="40">
          <a href="<%= root_url %>university/<%= @university.id %>/faculty/<%= faculty.id %>">Edit</a>
          ||
          <%= link_to "Delete", university_faculty_path(id: faculty.id, university_id: @university.id),
            method: :delete,
              data: { confirm: 'Are you sure?' }%>
        </td>
      </tr>
    <%end%>
    </tbody>
  </table>
  <div>
    <%= paginate @faculties %>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#facultyIndex').dataTable();
  } );
</script>