<div class="line">
  <p style="color: darkorange; font-size: 20px;">Add Experience</p>
</div><br><br>

<%= form_for current_user, url: {controller: :student, action: :add_academic, method: :patch, id: current_user.id} do
|f| %>

  <%= f.fields_for current_user.experiences.new do |g| %>
    <%= hidden_field(:type, value='experience') %>
    Course related experience     :
    <%= g.radio_button(:related, 'true', :checked => true, class: 'mediumInput') %><br>
    Course unrelated experience:
    <%= g.radio_button :related, 'false', :checked => false %><br><br>

    <%= label_tag(:job_type, "Job Name:", class: 'labelExtraLarge') %>
    <%= g.text_field :job_type, class: 'borderlessInputMedium'%><br><br>

    <%= label_tag(:start, "Start Date:", class: 'labelExtraLarge') %>
    <%= g.date_field :start, class: 'borderlessInputMedium' %><br><br>

    <%= label_tag(:end, "End Date:", class: 'labelExtraLarge') %>
    <%= g.date_field :end, class: 'borderlessInputMedium' %><br><br>

    <%= label_tag(:company, "Company Name:", class: 'labelExtraLarge') %>
    <%= g.text_field :company, class: 'borderlessInputMedium' %><br><br>

    <%= label_tag(:responsibility, "Responsibility:", class: 'labelExtraLarge') %>
    <%= g.text_area :responsibility, class: 'extraLargeInput' %><br><br>
  <% end %>

  <%= label_tag(:submit, "", class: 'labelLarge') %>
  <%= f.submit 'Update', class: 'mediumSubmit' %>
<% end %><br>

<table class="table", style="width: 100%;">
  <tr style="height: 50px; background-color: #ddd;">
    <th>Job Type</th><th>Start Date</th><th>End Date
    </th><th>Company</th><th>Responsibility</th><th>Action</th>
  </tr>
  <% current_user.experiences.select(&:persisted?).each do |g| %>
    <tr>
      <th><%= g.job_type %></th>
      <td><%= g.start %></td>
      <td><%= g.end %></td>
      <td><%= g.company %></td>
      <td><%= g.responsibility %></td>
      <td><a style="color: red;" href="<%= root_url %>/student/<%= current_user.id
      %>/reload?destroy=true&type=experience&type_id=<%= g.id %>">delete</a></td>
    </tr>
  <% end%>
</table>