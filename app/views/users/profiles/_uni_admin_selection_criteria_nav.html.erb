<h1>Academic Scores:</h1>

<div class="tab">
  <button class="tablinks" id="rule_tab" onclick="openAcademic(event, 'rule')">Selection Rule<</button>
  <button class="tablinks" id="english_tab" onclick="openAcademic(event, 'english')">English Competency</button>
  <button class="tablinks" id="qualification_tab" onclick="openAcademic(event, 'qualification')">Academic Scores</button>
  <button class="tablinks" id="experience_tab" onclick="openAcademic(event, 'experience')">Experiences</button>
  <button class="tablinks" id="country_tab" onclick="openAcademic(event, 'country')">Country</button>
</div>

<div id="rule" class="tabcontent">
  <%= render(partial: "users/profiles/uni_admin_selection_criteria_rule") %>
</div>

<div id="english" class="tabcontent">
  <%= render(partial: "users/profiles/uni_admin_selection_criteria_english") %>
</div>

<div id="qualification" class="tabcontent">
  <%= render(partial: "users/profiles/uni_admin_selection_criteria_qualification") %>
</div>

<div id="experience" class="tabcontent">
  <%= render(partial: "users/profiles/uni_admin_selection_criteria_experience") %>
</div>

<div id="country" class="tabcontent">
  <%= render(partial: "users/profiles/uni_admin_selection_criteria_country") %>
</div>


<script>
  document.getElementById('uni_third').classList.add("active");

  function openAcademic(evt, academicName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(academicName).style.display = "block";
    evt.currentTarget.className += " active";
  }

  var tabsName = "<%= tabName %>" != null ? "<%= tabName %>" : "english_tab";
  document.getElementById(tabsName).click();
</script>
</div>
