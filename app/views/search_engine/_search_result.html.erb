<% unless  params[:term].nil? %>
  <div class="row">
    <div class="search-results-container">
      <% if @results.count > 0 %>
        <h4> <%= @results.total_entries %> results found.</h4><br>

        <% @results.each do |record| %>
          <div style="padding-bottom: 25px;">
            <div class=" faculty-details search-result" style="background-color: lightblue;">
              <a style="color: dodgerblue;" href="search_engine/item_detail?name=<%= record.class.name %>&id=<%= record.id %>"
                 class="list-group-item">
                <h4 class="list-group-item-heading"><%= record.name %></h4>
                <p class="list-group-item-text"><%= record.search_detail %>
                </p>
              </a>
            </div>
          </div>
        <% end %>
      <% else %>
        <h3> No results found.</h3>
      <% end %>
      <div style="background-color: lightgrey; color: dodgerblue; height: 25px; width: 100%;">
        <%= will_paginate @results %>
      </div>
    </div>
  </div>
<% end %>